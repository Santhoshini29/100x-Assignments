
// From this
function doArithmetic(firstEl, secondEl, whatToDo) {
	
	if(whatToDo === "sum") {
		var answer = sum(firstEl, secondEl);
		return answer;
	}

	if(whatToDo === "multiply") {
		var answer = multiply(firstEl, secondEl);
		return answer;
	}

}

// To this
function doArithmetic(firstEl, secondEl, funToRun){
	return funToRun(firstEl, secondEl);
}



// Code for stopwatch

var counter = 1;

function printCounter(){
  console.clear();
  console.log(counter);
  counter = counter+1;
}

setInterval(printCounter, 1000);



// The code used in above demonstration.

var counter = 1;

function printCounter(){
  console.clear();
  console.log(counter);
  counter = counter+1;
}

setTimeout(printCounter, 3000);

var counter = 0;
for(var i = 0; i < 3; i++){
    counter = counter + i;
}